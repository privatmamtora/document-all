{
  "include": [
    "exports/**/*.js"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "verbatimModuleSyntax": true
  }
}
